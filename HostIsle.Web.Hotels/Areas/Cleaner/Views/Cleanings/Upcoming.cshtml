@using HostIsle.Data.Models.Hotels.Enums
<div class="main-content container-fluid">
    <div class="page-title">
        <h3>Предстоящи почиствания</h3>
        <p class="text-subtitle text-muted">Тук може да следите предстоящите Ви почиствания и да отбелязвате изпълнените.</p>
    </div>
    <div class="row" id="table-head">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Почиствания</h4>
                </div>
                <div class="card-content">
                    <div class="table-responsive">
                        <table class="table mb-0">
                            <thead class="thead-dark">
                                <tr>
                                    <th>Стая</th>
                                    <th>Тип</th>
                                    <th style="text-align: left;">Отбележи</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var cleaning in this.Model.Cleanings.Where(c => c.Status == CleaningStatus.Upcoming && c.Date.ToString("dd/MM/yyyy") == DateTime.Now.ToString("dd/MM/yyyy") && c.Room.HotelId == this.Model.Hotel.Id && c.Cleaner?.Id == this.Model.UserId))
                                {
                                    var roomType = cleaning.Room.RoomType switch
                                    {
                                        RoomType.Apartment => "Апартамент",
                                        RoomType.Double => "Двойна",
                                        RoomType.Quad => "Четворна",
                                        RoomType.Studio => "Студио",
                                        RoomType.Suite => "Суит",
                                        RoomType.Triple => "Тройна",
                                        _ => null
                                    };

                                    <tr>
                                        <td class="text-bold-500">@cleaning.Room.RoomNumber</td>
                                        <td>@roomType</td>
                                        <td style="text-align: left;">
                                            <a href="#" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                <i class="far fa-caret-square-down"></i>
                                            </a>

                                            <div class="dropdown-menu">
                                                <form method="post" class="px-2 py-2" asp-controller="Cleanings" asp-action="Clean" asp-route-id="@cleaning.Id">

                                                    <div class="form-group">
                                                        <div class="checkbox">
                                                            <input asp-for="CleanRoomViewModel.IsDamaged" type="checkbox" class="checkbox-input">
                                                            <label>Забелязани неизправности</label>
                                                        </div>
                                                    </div>

                                                    <button type="submit" class="btn btn-primary">Отбележи</button>

                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>