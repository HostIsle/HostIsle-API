@using HostIsle.Web.Hotels.Areas.Guest.ViewModels.Signals
@model CreateSignalViewModel
@{
    var data = (HotelInformationViewModel)this.ViewBag.Model;
}
<div class="main-content container-fluid">
    <div class="page-title">
        <h3>Сигнали</h3>
        <p class="text-subtitle text-muted">Тук може да подадете сигнали за нарушения и неизправности.</p>
    </div>
    <section class="section">
        <div class="row">
            <div class="col">
                <div class="card">
                    <div class="card-header">
                        Подай сигнал
                    </div>
                    <div class="card-body">
                        <form method="post" asp-controller="Signals" asp-action="Create" asp-route-id="@String.Concat(data.Hotel.Id, " ", data.Role)" id="signal-form">
                            <div class="form-group mb-3">
                                <label for="exampleFormControlTextarea1" class="form-label">Заглавие</label>
                                <textarea asp-for="Title" class="form-control" id="exampleFormControlTextarea1" form="signal-form" rows="1" placeholder="Кратко заглавие..." maxlength="30" style="resize: none;"></textarea>
                            </div>
                            <div class="form-group mb-3">
                                <label for="exampleFormControlTextarea1" class="form-label">Описание</label>
                                <textarea asp-for="Description" class="form-control" id="exampleFormControlTextarea1" form="signal-form" rows="3" placeholder="Опишете сигнала, а ние ще се свържем с Вас..."></textarea>
                            </div>
                            <div class="clearfix">
                                <button type="submit" class="btn btn-primary float-right">Изпрати</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="row" id="table-hover-row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Подадени сигнали</h4>
                    </div>
                    <div class="card-content">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead>
                                    <tr>
                                        <th>Име</th>
                                        <th>Дата</th>
                                        <th>Час</th>
                                        <th>Статус</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var signal in data.Hotel.Feedbacks.Where(s => s.Date <= data.Reservation.EndDate && s.Date >= data.Reservation.StartDate && s.Guest.Id == data.User.Id))
                                    {
                                        <tr>
                                            <td class="text-bold-500">@signal.Title</td>
                                            <td>@signal.Date.ToString("dd/MM/yyyy")</td>
                                            <td class="text-bold-500">@signal.Date.ToString("HH:mm")</td>
                                            <td>@Html.Raw(signal.IsProcessed? "Обработено" : "Необработено")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>