@using HostIsle.Web.Hotels.ViewModels.Hotels
@model HotelInformationViewModel
<div class="main-content container-fluid">
    <div class="page-title">
        <h3>Заявки</h3>
        <p class="text-subtitle text-muted">Тук може подтвърдите заявките за регистрация, подадени от служителите.</p>
    </div>
    <div class="row" id="table-head">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Подадени заявки</h4>
                </div>
                <div class="card-content">
                    <div class="table-responsive">
                        <table class="table mb-0">
                            <thead class="thead-dark">
                                <tr>
                                    <th>Име</th>
                                    <th>Фамилия</th>
                                    <th>Роля</th>
                                    <th>Дата</th>
                                    <th>Опции</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var request in Model.Hotel.Requests)
                                {
                                    var role = request.Role switch
                                    {
                                        "Manager" => "Управител",
                                        "Receptionist" => "Рецепционист",
                                        "Cleaner" => "Камериер",
                                        "Guest" => "Гост",
                                        _ => string.Empty
                                    };
                                    <tr>
                                        <td>@request.User.FirstName</td>
                                        <td>@request.User.LastName</td>
                                        <td>@role</td>
                                        <td>@request.CreatedOn.Date.ToString("dd.MM.yyyy")</td>
                                        <td>
                                            <ul class="list-inline m-0">
                                                
                                                <li class="list-inline-item">
                                                    <form asp-controller="Requests" asp-action="Accept" asp-route-id="@request.Id" method="post">
                                                        <button class="btn btn-success btn-sm rounded-0" type="submit" data-toggle="tooltip"
                                                                data-placement="top" title="Одобри">
                                                            <i class="fa fa-check"></i>
                                                        </button>
                                                    </form>
                                                </li>
                                                
                                                <li class="list-inline-item">
                                                    <form asp-controller="Requests" asp-action="Delete" asp-route-id="@request.Id" method="post">
                                                        <button class="btn btn-danger btn-sm rounded-0" type="submit" data-toggle="tooltip"
                                                                data-placement="top" title="Изтрий">
                                                            <i class="fa fa-trash"></i>
                                                        </button>
                                                    </form>
                                                </li>

                                            </ul>
                                        </td>
                                    </tr>
                                }
                                </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>