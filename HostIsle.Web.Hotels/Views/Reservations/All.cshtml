@using HostIsle.Data.Models.Hotels.Enums
@{
    var data = (HotelInformationViewModel)this.ViewBag.Model;
    this.Layout = "_UsersLayout";
}
<div class="main-content container-fluid">
    <div class="page-title">
        <div class="row">
            <div class="col-12 col-md-12">
                <h3>Резервации</h3>
                <p class="text-subtitle">Тук може да следите резервацииите в хотела.</p>
            </div>
        </div>
    </div>
    <section class="section">
        <div class="card">
            <div class="card-header">
                Резервации
            </div>
            <div class="card-body">
                <div class="col-md-12">
                    <ul class="nav nav-tabs" id="myTab" role="tablist">
                        <li class="nav-item" role="presentation">
                            <a class="nav-link active" id="passed-tab" data-toggle="tab" href="#passed"
                               role="tab" aria-controls="passed" aria-selected="false">Активни</a>
                        </li>
                        <li class="nav-item" role="presentation">
                            <a class="nav-link" id="active-tab" data-toggle="tab" href="#active"
                               role="tab" aria-controls="active" aria-selected="true">Минали</a>
                        </li>

                    </ul>
                    <div class="tab-content" id="myTabContent">
                        <div class="tab-pane fade show active" id="passed" role="tabpanel"
                             aria-labelledby="passed-tab">

                            <table class='table table-striped' id="table1">
                                <thead>
                                    <tr>
                                        <th>Стая</th>
                                        <th>Тип</th>
                                        <th>Период</th>
                                        <th>Освободи</th>
                                        <th>Детайли</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var reservation in data.Hotel.Reservations.Where(r => r.EndDate >= DateTime.Now))
                                    {
                                        var roomType = reservation.Room.RoomType switch
                                        {
                                            RoomType.Apartment => "Апартамент",
                                            RoomType.Double => "Двойна",
                                            RoomType.Quad => "Четворна",
                                            RoomType.Studio => "Студио",
                                            RoomType.Suite => "Суит",
                                            RoomType.Triple => "Тройна",
                                            _ => null
                                        };

                                        <tr>
                                            <td>@reservation.Room.RoomNumber</td>
                                            <td>@roomType</td>
                                            <td>@reservation.StartDate.ToString("dd.MM.yyyy") - @reservation.EndDate.ToString("dd.MM.yyyy")</td>
                                            <td>
                                                <ul class="list-inline m-0">

                                                    <li class="list-inline-item">
                                                        <form asp-controller="Reservations" asp-action="Free" asp-route-id="@String.Concat(data.Role, " ", reservation.Id)" method="post">
                                                            <button class="btn btn-primary btn-sm rounded-0" type="submit" data-toggle="tooltip"
                                                                    data-placement="top" title="Освободи">
                                                                <i class="fas fa-door-open"></i>
                                                            </button>
                                                        </form>
                                                    </li>
                                                </ul>
                                            </td>
                                            <td><a asp-controller="Reservations" asp-action="Overview" asp-route-id="@String.Concat(data.Hotel.Id, " ", data.Role, " ", reservation.Id)">Отвори</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>

                        </div>

                        <div class="tab-pane fade" id="active" role="tabpanel"
                             aria-labelledby="active-tab">

                            <table class='table table-striped' id="table1">
                                <thead>
                                    <tr>
                                        <th>Стая</th>
                                        <th>Тип</th>
                                        <th>Период</th>
                                        <th>Детайли</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var reservation in data.Hotel.Reservations.Where(r => r.EndDate < DateTime.Now))
                                    {
                                        var roomType = reservation.Room.RoomType switch
                                        {
                                            RoomType.Apartment => "Апартамент",
                                            RoomType.Double => "Двойна",
                                            RoomType.Quad => "Четворна",
                                            RoomType.Studio => "Студио",
                                            RoomType.Suite => "Суит",
                                            RoomType.Triple => "Тройна",
                                            _ => null
                                        };

                                        <tr>
                                            <td>@reservation.Room.RoomNumber</td>
                                            <td>@roomType</td>
                                            <td>@reservation.StartDate.ToString("dd.MM.yyyy") - @reservation.EndDate.ToString("dd.MM.yyyy")</td>
                                            <td><a asp-controller="Reservations" asp-action="Overview" asp-route-id="@String.Concat(this.Model.Hotel.Id, " ", this.Model.Role, " ", reservation.Id)">Отвори</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

</div>